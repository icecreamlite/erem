<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.ERemote.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@android:color/transparent"
    android:theme="@style/Theme.ERemote.AppWidgetContainer">

    <LinearLayout
        android:id="@+id/widget_background"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/my_tansparent_background"></LinearLayout>

    <LinearLayout
        android:id="@+id/widget_outline"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="6dp"
        android:background="@drawable/my_transparent_linear_layout"></LinearLayout>

    <Button
        android:id="@+id/button_widget_l"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@+id/textView"
        android:backgroundTint="@color/purple_500"
        android:text="L" />

    <Button
        android:id="@+id/button_widget_f"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/textView"
        android:backgroundTint="@color/purple_500"
        android:text="F" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />
</RelativeLayout>